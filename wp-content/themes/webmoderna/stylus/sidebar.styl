// El Sidebar y todo su contenido
.sidebar
	background blanco_puro
	box-sizing border-box
	margin 0
	overflow hidden
	vertical-align top
	
	&__section
		box-sizing border-box
		margin $em
		text-align left

		&__article
			border 1px solid gris_fuerte
			border-radius 0 0 3px 3px
			box-sizing border-box
			color gris_suave
			line-height 150%
			overflow hidden
			padding $em

			ul
				// list-style-image url("../img/Entypo_e766(0)_16.png")
				//list-style-image url("data:image/png;base64,")
				padding-left 1.4em
			
			ul, ol
				li
					border-bottom 1px solid gris_nube
					margin-bottom 0.25em
					margin-top 0.25em
				
				li.last-child
					border-bottom none

			&__content-left
				display table-cell
				max-width 50px
				min-width 50px
				vertical-align top
				
			&__content-right
				box-sizing border-box
				display table-cell
				padding 0 1em
				vertical-align top
				width 100%

				.sidebar__section__article__subtitle
					margin-top 0
					margin-bottom 0
					a
						text-decoration none

				.sidebar__section__article__fecha
					font-family fuente_heading_bold_italic
					font-size 0.8em

			&__figure
				display block
				margin 0
				max-width 100px
				padding 0
				position relative

				a
					/*&:after
						color blanco
						content "+"
						display inline-block
						font-size 60px
						line-height 60px
						height 100%
						left 0
						opacity 0
						position absolute
						text-decoration none
						text-align center
						top 0
						transition_comun()
						vertical-align middle
						width 100%
						z-index 2*/

					&:before
						background rojo_google
						content ""
						display block
						height 100%
						opacity 0
						position absolute
						transition_comun()
						width 100%

				a
					&:hover
					&:focus
						&:before
							opacity 0.5

						&:after
							top 20px
							opacity 1

					img
						display block
						width 100%
					
			&__post
				border-bottom 1px solid gris_nube
				display table
				margin-bottom 0.5em
				margin-top 0.5em
				padding-bottom 0.5em
				overflow hidden
			
			&__post.first-child
			&__post:first-child
				margin-top 2em

			&__post.last-child
			&__post:last-child
				border-bottom none
				margin-bottom 0

		&__header
			background gris_fuerte
			border-radius 3px 3px 0 0
			padding ($em/2) $em

			&__title
				color gris_suave
				font-family fuente_heading
				font-size $em*0.8
				margin 0
				padding 0
				text-transform uppercase
	


@media all and (min-width: 900px)
	.sidebar
		display inline-block
		float right
		max-width 28%
		margin-top $em
		margin-right 10px
		vertical-align top

		&__section
			margin $em 0
			
			&__article
				&__post.first-child
				&__post:first-child
					margin-top 0.5em

		&__section:first-child
		&__section.first-child
			margin-top 0