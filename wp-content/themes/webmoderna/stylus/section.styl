// Secciones de la web

// Cuerpos Centrales
.centrales
	position relative
	margin-top 1em
	
	&__article
		// max-width 780px
		// margin 0 auto
		display inline-block
		margin 3px
		overflow hidden
		// padding 1em
		position relative
		max-width 45%
		min-width 45%
		vertical-align top
		
		&__content
			color gris_suave
			display inline-block
			font-family fuente_heading_bold
			line-height 150%
			margin-top 1em
			// text-align left
			p
				text-indent 0

			ul
				// list-style-image url("../img/Entypo_e766(0)_16.png")
				// list-style-image url("data:image/png;base64,")
				padding-left 1.4em

		
		&__figure
			// border-radius 50%
			// margin 0 auto 1em auto
			margin 0
			padding 0
			// max-width 300px
			// overflow hidden
			position relative

			img
				// border-radius 50%
				display block
				margin 0
				padding 0
				width 100%

		&__header
			bottom 0
			background rgba(0,0,0,0.7)
			left 0
			padding 0
			position absolute
			// top 40%
			width 100%

			&__title
				color blanco
				font-size 0.8em
				margin 0
				padding $em
				text-transform uppercase
				text-indent 0

@media all and (min-width: 700px)
	// Cuerpos Centrales
	.centrales
		box-sizing border-box
		// display table
		// display flex
		// flex 1 1 60%
		// flex-wrap wrap
		// justify-content space-between
		padding 0
		width 100%

		&__article
			box-sizing border-box
			display inline-block
			// margin 0
			vertical-align top

@media all and (min-width: 900px)
	.centrales
		// display table
		margin-bottom 1em
		margin-top 0.5em

		&__article
			// display table-cell
			max-width 24%
			min-width 24%
			width 24%


// Cuerpos Cruzados
.cruzados
	padding 1em
	margin 0 auto
	max-width 600px

	&__article
		//border-bottom 1px solid gris_nube
		box-sizing border-box
		margin 0 0 1em 0
		overflow hidden
	
		&__content
			box-sizing border-box
			color gris_suave
			font-family fuente_heading_bold
			line-height 150%
			//text-align left
			text-indent 0 !important
			
			p
				text-indent 0 !important

			ul
				// list-style-image url("../img/Entypo_e766(0)_16.png")
				// list-style-image url("data:image/png;base64,")
				padding-left 1.4em

			&__header
				// background verde_azulado
				//padding 0.5em 2em 0.5em 0.5em
				position relative
				transition_comun()

				&__title
					color verde_azulado
					font-family fuente_heading_bold
					font-size 0.9em
					margin 0
					padding 0
					text-transform uppercase

					a
						color blanco
						display inline-block
						transition all 1.2s ease
						text-decoration none
						&:hover
						&:focus
							margin 0 auto
		
		&__content
		&__figure
			display inline-block
			vertical-align top
		
		&__content
			font-size 1.4em
		
		&__figure
			//background gris_nube
			box-sizing border-box
			margin 0
			position relative
			overflow hidden

			img
				display block
				width 100%
			
			a:before
				background verde_azulado
				content ""
				display block
				height 100%
				opacity 0
				position absolute
				transition_comun()
				width 100%
			
			a:after
				border none
				color blanco
				content "+"
				display inline-block
				line-height 70%
				font-size 60px
				height 40px
				left 50%
				margin -20px 0 0 -20px
				opacity 0
				position absolute
				text-align center
				text-decoration underline
				transition_comun()
				top 50%
				width 40px
				z-index 2

			a
				display block
				position relative
				&:hover
				&:focus
					&:before
						opacity 0.5

					&:after
						opacity 1
						text-decoration none
	
	//&__article.last-child
	//	border-bottom none

@media all and (min-width: 700px)
	// Cuerpos Cruzados
	.cruzados
		max-width 100%

		&__article
			&__content
				float right
				margin 0 0 0 1%
				max-width 49%

			&__figure
				float left
				margin 0 0 1% 0
				max-width 49%

		// Cambiando el orden
		&__article.nth-child-even
			.cruzados__article__content
				float left
				margin 0 1% 0 0

			.cruzados__article__figure
				float right
				margin 0 0 0 1%

@media all and (min-width: 700px)
	.cruzados
		padding-top 0

// Para eliminar el espacio a la izquierda
@media all and (min-width: 1230px)
	.cruzados
		padding-left 0

