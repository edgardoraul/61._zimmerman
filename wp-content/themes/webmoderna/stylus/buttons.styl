// Botones y algunos tipos de inputs[type="submit o reset"]
button
input[type="submit"]
input[type="reset"]
.boton
.comment-reply-link
.cancel-comment-reply a
	background naranja_suave
	border none
	border-radius 4px
	font-family fuente_heading_bold
	color blanco
	cursor pointer
	display inline-block
	padding 0.5em 1em
	text-decoration none
	transition all 0.1s ease-in-out
	vertical-align middle
	&:active
		transform scale(0.95)
	
button[type="submit"]
input[type="submit"]
.comment-reply-link
.cancel-comment-reply a
.boton.verde_azulado
	background verde_azulado

button
input[type="submit"]
input[type="reset"]
.boton
.comment-reply-link
.cancel-comment-reply a
	&:hover
	&:focus
		background rosa_suave
		color blanco

.cancel-comment-reply
	margin 1em auto