// Entradas, Categorías, Tags, Searchings
.entradas
	box-sizing border-box
	margin 1em
	
	&__article
		background blanco_grisaceo2
		border-bottom 1px solid gris_nube
		display table
		margin 1em 0
		// padding-bottom 0.5em
		text-align left

		ol
		ul
			margin-left 1em
		
		&__figure
			display table-cell
			margin 0
			max-width 100px
			min-width 100px
			overflow hidden
			padding 0
			vertical-align top

			a
				display block
				position relative
				text-decoration none
				transition_comun()
				
				&:after
					background rgba(verde_azulado, 0.5)
					content ""
					height 100%
					left 0
					opacity 0
					position absolute
					top 0
					transition_comun()
					width 100%
				
				&:before
					color blanco
					content "+"
					font-family Monospace
					font-size 60px
					height 60px
					line-height 100%
					left 50%
					margin -30px 0 0 -20px
					opacity 0
					position absolute
					text-decoration none
					transition_comun()
					top 10%
					width 40px
					z-index 1
					
				&:hover
				&:focus
					&:after
					&:before
						opacity 1
						text-decoration none
					&:before
						top 50%
						

			img
				display block
				width 100%
				

		&__header
			&__title
				// background gris_fuerte
				color blanco
				font-size $em
				padding 0
				margin 0
				// text-transform uppercase

				a
					color gris_suave
					display block
					padding 0.3em 50px 0.3em 0.25em
					position relative
					text-decoration none
					// transition_comun()

					/*&:after
						content "+"
						height 30px
						font-family monospace
						font-size 30px
						margin-top -15px
						position absolute
						right 0.5em
						text-align center
						top 50%
						transition_comun()
						width 30px
*/
					&:hover
					&:focus
						background rosa_suave
						color blanco
						
						// &:after
						// 	transform rotate(180deg)
						

		&__right
			display table-cell
			padding-left 0.5em
			vertical-align top
			width 100%
	
	&__article:last-child
	&__article.last-child
		border-bottom none
	
	&__header
		&__title
			color gris_suave
			padding 0
			margin 0
			font-size $em

@media all and (min-width: 540px)
	.entradas
		&__article
			&__figure
				max-width 100px
				min-width 100px

			&__header
				&__title
					font-size $em

					a
						padding-left 0.5em

@media all and (min-width: 740px)
	.entradas
		&__article
			&__figure
				max-width 150px
				min-width 150px

@media all and (min-width: 900px)
	.entradas
		text-align left
		vertical-align top
		&__article
			display inline-block
			width 49.5%

