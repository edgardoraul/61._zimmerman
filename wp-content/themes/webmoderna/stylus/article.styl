// Categorizaciones de las entradas
.categorizacion
	// border-top 1px dashed gris_suave
	// border-top 1px dashed rgba(gris_suave, 0.5)
	color gris_suave
	display table
	margin 0
	padding 0.25em 0
	text-align left
	width 100%

	&__icono
		// border-right 1px dashed gris_suave
		// border-right 1px dashed rgba(gris_suave, 0.5)
		// color verde_azulado
		display table-cell
		padding 0.25em 0.25em 0.25em 0
		vertical-align top
		width 1.5em

	&__list
	ul.categorizacion__list
	ol.categorizacion__list
		display table-cell
		font-family fuente_heading_bold_italic
		font-style italic
		font-weight bolder
		margin-left 0
		padding-left 0.5em
		vertical-align middle

		&__items
		.post-categories
			margin 0
			padding 0

			li
				display inline-block
				padding 0
				margin 0

				a
					background gris_suave
					border-radius 3px
					color blanco
					display inline-block
					padding 1px 3px
					text-align center
					text-decoration none
					text-shadow_lindo()
					vertical-align middle

					&:first-letter
						text-transform uppercase

					&:hover
					&:focus
						color blanco
						background rosa_suave

	&:first-child
	&.first-child
		border-top none

// Artículos de Páginas
.page
	padding $em
	text-align left
	
	&__article
		ol
		ul
			li
				// text-indent 1em
				margin-bottom 0.5em
				margin-top 0.5em

		&__figure
			border 1px solid plateado
			margin 0 auto 1em auto
			padding 0
			max-width 400px
			
			a
			img
				display block
				width 100%

			a
				position relative
				text-decoration none
				transition_comun()

				&:after
					background rgba(amarillo_flor, 0.5)
					content ""
					height 100%
					left 0
					opacity 0
					position absolute
					top 0
					transition_comun()
					width 100%
				
				&:before
					bottom 0
					color blanco
					content "+"
					font-family Monospace
					font-size 60px
					height 60px
					line-height 100%
					left 50%
					margin -30px 0 0 -20px
					opacity 0
					position absolute
					text-decoration none
					transition_comun()
					// top 0
					width 40px
					z-index 1
					
				&:hover
				&:focus
					&:after
					&:before
						opacity 1
						text-decoration none
					&:before
						// top 50%
						bottom 40%
			
			figcaption
				background gris_nube
				color gris_suave
				font-family fuente_heading_bold
				// font-style italic
				font-weight bolder
				padding 0.5em
				text-align center

		&__form_comentarios
			margin 1em auto


		&__header
			// background rosa_suave
			background gris_nube
			border-bottom 10px solid gris_suave
			padding 0.5em

			&__title
				// color blanco
				font-family fuente_heading_bold
				font-size $em
				font-weight bolder
				margin 0
				padding 0
				text-transform uppercase

